<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SetAlarmActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/constraint_time_set">

        <ImageButton
            android:id="@+id/image_button_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_left_arrow"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/back_description"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/textview_top_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/top_default_time"
            android:textSize="10pt"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/textview_top_week"/>

        <TextView
            android:id="@+id/textview_top_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/textview_top_time"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_time_set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toTopOf="@id/scrollview_time_set"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraint_top_bar">

        <TimePicker
            android:id="@+id/timepicker_time_set"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:timePickerMode="spinner"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/button_time_weekday"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_time_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/all_day"
            app:layout_constraintBottom_toTopOf="@id/button_time_weekday"
            app:layout_constraintStart_toEndOf="@id/timepicker_time_set"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_time_weekday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/weekday"
            app:layout_constraintBottom_toTopOf="@id/button_time_weekend"
            app:layout_constraintStart_toEndOf="@id/timepicker_time_set"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_time_all" />

        <Button
            android:id="@+id/button_time_weekend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/weekend"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/timepicker_time_set"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_time_weekday" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:id="@+id/scrollview_time_set"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/button_alarm_save"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constraint_time_set">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ToggleButton
                    android:id="@+id/togglebutton_sel_sun"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/bg_weekend_selector"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:textColor="@color/red"
                    android:textOff="@string/sun"
                    android:textOn="@string/sun"
                    android:textSize="8pt" />

                <ToggleButton
                    android:id="@+id/togglebutton_sel_mon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/bg_weekend_selector"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:checked="true"
                    android:textColor="@color/main"
                    android:textOff="@string/mon"
                    android:textOn="@string/mon"
                    android:textSize="8pt" />

                <ToggleButton
                    android:id="@+id/togglebutton_sel_tue"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/bg_weekend_selector"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:checked="true"
                    android:textColor="@color/main"
                    android:textOff="@string/tue"
                    android:textOn="@string/tue"
                    android:textSize="8pt" />

                <ToggleButton
                    android:id="@+id/togglebutton_sel_wed"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/bg_weekend_selector"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:checked="true"
                    android:textColor="@color/main"
                    android:textOff="@string/wed"
                    android:textOn="@string/wed"
                    android:textSize="8pt" />

                <ToggleButton
                    android:id="@+id/togglebutton_sel_thu"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/bg_weekend_selector"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:checked="true"
                    android:textColor="@color/main"
                    android:textOff="@string/thu"
                    android:textOn="@string/thu"
                    android:textSize="8pt" />

                <ToggleButton
                    android:id="@+id/togglebutton_sel_fri"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/bg_weekend_selector"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:checked="true"
                    android:textColor="@color/main"
                    android:textOff="@string/fri"
                    android:textOn="@string/fri"
                    android:textSize="8pt" />

                <ToggleButton
                    android:id="@+id/togglebutton_sel_sat"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/bg_weekend_selector"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:textColor="@color/blue"
                    android:textOff="@string/sat"
                    android:textOn="@string/sat"
                    android:textSize="8pt" />

<!--                <ImageButton-->
<!--                    android:id="@+id/button_calendar_set"-->
<!--                    android:layout_width="36dp"-->
<!--                    android:layout_height="36dp"-->
<!--                    android:layout_marginStart="10dp"-->
<!--                    android:scaleType="fitXY"-->
<!--                    android:src="@drawable/ic_calendar_50"-->
<!--                    android:background="?attr/selectableItemBackgroundBorderless"-->
<!--                    android:contentDescription="@string/calendar_description" />-->

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:background="@color/txt_deactivate_1" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_sound_set"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:padding="8dp">

                <TextView
                    android:id="@+id/textview_sound_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/alarm_sound"
                    android:textColor="@color/black"
                    android:textSize="10pt"
                    app:layout_constraintBottom_toTopOf="@id/textview_sound_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textview_sound_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/textview_default_select"
                    android:textColor="@color/text_main"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textview_sound_text" />

                <View
                    android:layout_width="0.3dp"
                    android:layout_height="0dp"
                    android:layout_margin="8dp"
                    android:background="@color/txt_deactivate_1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/switch_sound"
                    app:layout_constraintTop_toTopOf="parent" />

                <Switch
                    android:id="@+id/switch_sound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <SeekBar
                android:id="@+id/seekbar_sound"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:progress="70"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:background="@color/txt_deactivate_1" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_vibration_set"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:padding="8dp">

                <TextView
                    android:id="@+id/textview_vibration_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/alarm_vibration"
                    android:textColor="@color/black"
                    android:textSize="10pt"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/textview_vibration_title"/>

                <TextView
                    android:id="@+id/textview_vibration_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/textview_default_select"
                    android:textColor="@color/text_main"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textview_vibration_text" />

                <View
                    android:layout_width="0.3dp"
                    android:layout_height="0dp"
                    android:background="@color/txt_deactivate_1"
                    android:layout_margin="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/switch_vibration"/>

                <Switch
                    android:id="@+id/switch_vibration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:background="@color/txt_deactivate_1" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_name_set"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:padding="8dp">

                <TextView
                    android:id="@+id/textview_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/alarm_name"
                    android:textSize="10pt"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/textview_name_title"/>

                <TextView
                    android:id="@+id/textview_name_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/textview_default_select"
                    android:textColor="@color/text_main"
                    app:layout_constraintTop_toBottomOf="@id/textview_name_text"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <View
                    android:layout_width="0.3dp"
                    android:layout_height="0dp"
                    android:layout_margin="8dp"
                    android:background="@color/txt_deactivate_1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/switch_name"/>

                <Switch
                    android:id="@+id/switch_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:background="@color/txt_deactivate_1" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_repeat_set"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:padding="8dp">

                <TextView
                    android:id="@+id/textview_repeat_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/alarm_repeat"
                    android:textSize="10pt"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/textview_repeat_title"/>

                <TextView
                    android:id="@+id/textview_repeat_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/textview_default_select"
                    android:textColor="@color/text_main"
                    app:layout_constraintTop_toBottomOf="@id/textview_repeat_text"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <View
                    android:layout_width="0.3dp"
                    android:layout_height="0dp"
                    android:layout_margin="8dp"
                    android:background="@color/txt_deactivate_1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/switch_repeat"/>

                <Switch
                    android:id="@+id/switch_repeat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:background="@color/txt_deactivate_1" />

            <android.widget.Button
                android:id="@+id/button_alarm_delete"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:text="@string/button_delete"
                android:background="@drawable/bg_delete_btn"
                android:foreground="?attr/selectableItemBackground"
                android:textColor="@color/white"
                android:layout_margin="8dp"/>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/button_alarm_save"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@drawable/bg_ok_btn"
        android:foreground="?attr/selectableItemBackground"
        android:text="@string/button_save"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/scrollview_time_set"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>